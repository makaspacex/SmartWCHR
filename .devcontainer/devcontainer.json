{
  "name": "humble",
  "remoteUser": "rosdev",
  "image":"makaspacex/smartwchr:dev",
  "customizations": {
      "vscode": {
          "settings": {
              "files.associations": {
                  "*.rviz": "yaml",
                  "*.srdf": "xml",
                  "*.urdf": "xml",
                  "*.xacro": "xml"
              }
          }
      }
  },
  "workspaceFolder": "/home/rosdev/ros2_ws",
  "workspaceMount": "source=${localWorkspaceFolder},target=/home/rosdev/ros2_ws,type=bind",
  "mounts": [
    // "source=${localWorkspaceFolder}/.vscode/extensions.json,target=/home/rosdev/ros2_ws/.vscode/extensions.json,type=bind",
    // "source=${localWorkspaceFolder}/.devcontainer,target=/home/rosdev/ros2_ws/.devcontainer,type=bind",
    // "source=${localWorkspaceFolder}/.devcontainer,target=/home/rosdev/ros2_ws/.devcontainer,type=bind",
  ],
  "runArgs": [
      "--net=host",
      "--privileged",
      "--ipc=host",
      "--device=/dev/bus/usb:/dev/bus/usb",
      "--device=/dev/oradar:/dev/oradar"
  ]
}
